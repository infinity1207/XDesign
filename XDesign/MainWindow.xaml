<Window
    x:Class="XDesign.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XDesign"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel Margin="0">
        <ToolBar Height="30" DockPanel.Dock="Top">
            <Button>
                <Button.Content>
                    <Image Source="/Images/New.png" Stretch="Uniform" />
                </Button.Content>
            </Button>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Margin="3,1,0,0"
                    Grid.Column="1"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                <Grid>
                    <ScrollViewer Name="DesignerScrollViewer"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <local:DesignerCanvas x:Name="MyDesignerCanvas"
                                              MinHeight="100"
                                              MinWidth="100"
                                              AllowDrop="True"
                                              Background="AliceBlue">
                        </local:DesignerCanvas>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border
                Grid.Column="0"
                BorderBrush="LightGray"
                BorderThickness="1">
                <local:Toolbox DefaultItemSize="55,55">
                    <ItemsControl.Items>
                        <Image
                            IsHitTestVisible="False"
                            Source="/Images/Barcode.png"
                            Stretch="Fill" />
                        <Image
                            IsHitTestVisible="False"
                            Source="/Images/Barcode.png"
                            Stretch="Fill" />
                    </ItemsControl.Items>
                </local:Toolbox>

            </Border>
        </Grid>
    </DockPanel>
</Window>
